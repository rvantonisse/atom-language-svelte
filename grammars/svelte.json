{
  "name": "HTML (Svelte)",
  "scopeName": "text.html.svelte",
  "fileTypes": ["svelte"],
  "patterns": [
    {
      "name": "meta.tag.svelte",
      "begin": "(</?)\\b((svelte)(:)(window|head|body|options|self|component))",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.$5.svelte"
        },
        "4": {
          "name": "punctuation.separator.directive.svelte"
        }
      },
      "end": "/?>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "patterns": [
        {
          "include": "#tag_contents"
        }
      ]
    },
    {
      "name": "meta.tag.html.svelte",
      "begin": "(<\\/?)(?=\\w)",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.begin.html"
        }
      },
      "end": "\\/?>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "patterns": [
        {
          "include": "#tag_contents"
        }
      ]
    },
    {
      "name": "meta.tag.component.svelte",
      "begin": "(</?)(([A-Z][a-zA-Z]*)+(\\.([A-Z][a-zA-Z]*)+)?)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.type.component.svelte"
        }
      },
      "end": "/?>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "patterns": [
        {
          "include": "#tag_contents"
        }
      ]
    },
    {
      "name": "meta.block.svelte",
      "begin": "{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.block.begin.svelte"
        }
      },
      "end": "}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.block.end.svelte"
        }
      },
      "patterns": [
        {
          "include": "#keywords"
        },
        {
          "include": "source.js"
        }
      ]
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "control_keywords": {
      "name": "keyword.control.$4.svelte",
      "match": "((#|:)|(/))\\b(if|each|else|await|then|catch)",
      "captures": {
        "1": {
          "name": "punctuation.definition.keyword.svelte"
        },
        "2": {
          "name": "punctuation.section.block.$4.begin.svelte"
        },
        "3": {
          "name": "punctuation.section.block.$4.end.svelte"
        }
      }
    },
    "operator_keywords": {
      "name": "keyword.operator.$0.svelte",
      "match": "as"
    },
    "keywords": {
      "patterns": [
        {
          "include": "#control_keywords"
        },
        {
          "include": "#operator_keywords"
        }
      ]
    },
    "svelte_expression": {
      "name": "meta.braces.svelte",
      "begin": "{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.braces.begin.svelte"
        }
      },
      "end": "}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.braces.end.svelte"
        }
      },
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    },
    "tag_entity": {
      "name": "entity.name.tag.html.svelte",
      "match": "(?<=<|\\/)([a-z]([a-z0-9]+)?)(?=\\s?)"
    },
    "tag_class": {
      "name": "entity.name.tag.html.svelte",
      "match": "(?<=<|\\/|\\.)([A-Z]([a-z]+)?)(?=\\s?)",
      "captures": {
        "1": {
          "name": "entity.name.class.svelte"
        }
      }
    },
    "tag_namespace": {
      "name": "entity.name.tag.html.svelte",
      "match": "(?<=<|\\/)([A-Z]([a-zA-Z0-9]+)?)(\\.)(?=[A-Z])",
      "captures": {
        "1": {
          "name": "entity.name.namespace.svelte"
        },
        "3": {
          "name": "punctuation.accessor.svelte"
        }
      }
    },
    "tag_directives": {
      "name": "meta.attribute.svelte",
      "begin": "((on|bind|class|use|animate|transition|in|out)\\b(\\:)([a-zA-Z0-9_-]+))\\s*(=)?\\s*",
      "beginCaptures": {
        "1": {
          "name": "entity.other.attribute-name.$2.svelte"
        },
        "2": {
          "name": "support.function.$2.svelte"
        },
        "3": {
          "name": "punctuation.separator.svelte"
        },
        "5": {
          "name": "punctuation.separator.key-value.html.svelte"
        }
      },
      "end": "(?!\\G)|(?=\\s|/?>)",
      "patterns": [
        {
          "include": "#svelte_expression"
        }
      ]
    },
    "tag_attribute_shorthand": {
      "name": "meta.attribute-shorthand.svelte",
      "match": "(?<=\\s)(({)\\s*(\\.{3})?([\\w]+)\\s*(}))(?=\\s|/?>)",
      "captures": {
        "1": {
          "name": "entity.other.attribute-name.svelte"
        },
        "2": {
          "name": "punctuation.definition.attribute-shorthand.begin.svelte"
        },
        "3": {
          "name": "keyword.operator.spread.js.svelte"
        },
        "4": {
          "name": "variable.svelte"
        },
        "5": {
          "name": "punctuation.definition.attribute-shorthand.end.svelte"
        }
      }
    },
    "tag_contents": {
      "patterns": [
        {
          "include": "#tag_namespace"
        },
        {
          "include": "#tag_class"
        },
        {
          "include": "#tag_entity"
        },
        {
          "include": "#tag_attribute_shorthand"
        },
        {
          "include": "#tag_directives"
        },
        {
          "include": "text.html.basic#tag-stuff"
        }
      ]
    }
  }
}
